<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/layout_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_confirmation_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Отправили код на "
            android:textAppearance="@style/title_2"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_confirmation_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Напишите его, чтобы подтвердить, что это вы, а не кто-то другой входит в личный кабинет"
            android:textAppearance="@style/title_3"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/layout_confirmation_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/et_confirmation_code_1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/rounded_corners_button"
                android:backgroundTint="@color/grey_1"
                android:hint="*"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textAppearance="@style/title_1"
                android:textColorHint="@color/grey_3"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/et_confirmation_code_2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/rounded_corners_button"
                android:backgroundTint="@color/grey_1"
                android:hint="*"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textAppearance="@style/title_1"
                android:textColorHint="@color/grey_3"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/et_confirmation_code_3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/rounded_corners_button"
                android:backgroundTint="@color/grey_1"
                android:hint="*"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textAppearance="@style/title_1"
                android:textColorHint="@color/grey_3"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/et_confirmation_code_4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/rounded_corners_button"
                android:backgroundTint="@color/grey_1"
                android:hint="*"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textAppearance="@style/title_1"
                android:textColorHint="@color/grey_3"
                android:textSize="24sp" />
        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirmation"
            style="@style/blueButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_corners_button"
            android:enabled="false"
            android:text="Подтвердить"
            android:textAppearance="@style/button_text_2"
            android:textColor="@color/blue_button_text_states" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>